# =================================================================
# GENERAL PROJECT CONFIGURATION
# =================================================================

# -- Logging --
# Defines the logging level for the console and file.
# Options: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO
LOG_TO_FILE=true
LOG_TO_CONSOLE=true
LOG_MAX_FILE_SIZE=10485760  # 10MB in bytes
LOG_BACKUP_COUNT=5
LOG_DIRECTORY=logs

# -- File Operations --
DEFAULT_ENCODING=utf-8
TEMP_DIRECTORY=temp
TEMP_DIR_PREFIX=utility_temp_

# =================================================================
# UTILITY: CHINESE CONVERTER
# =================================================================
CHINESE_CONVERTER_DEFAULT_CONVERSION=s2t
CHINESE_CONVERTER_CREATE_BACKUP=true
CHINESE_CONVERTER_BACKUP_SUFFIX=.backup

# =================================================================
# UTILITY: ANIME1 DOWNLOADER
# =================================================================
# Path examples:
#   Linux/macOS: /home/user/Videos/anime
#   Windows:     D:\Videos\anime
ANIME1_DOWNLOAD_DIR=/path/to/target/directory
ANIME1_MAX_CONCURRENT_DOWNLOADS=4
ANIME1_HISTORY_FILE=/path/to/anime_downloaded.jsonl

# =================================================================
# UTILITY: IMAGE TOOL
# =================================================================
IMAGE_TOOL_DEFAULT_OUTPUT_DIR=.
IMAGE_TOOL_DEFAULT_SAVE_DIR=images
IMAGE_TOOL_DEFAULT_CAMERA_INDEX=0
IMAGE_TOOL_DEFAULT_RESIZE_RATIO=0.5

# =================================================================
# UTILITY: NOVEL SCRAPER
# =================================================================
NOVEL_SCRAPER_OUTPUT_DIR=./novels
NOVEL_SCRAPER_USER_AGENT="Mozilla/5.0 (Windows NT 10.0; Win64; x64) AppleWebKit/537.36 (KHTML, like Gecko) Chrome/91.0.4472.124 Safari/537.36"
NOVEL_SCRAPER_REQUEST_TIMEOUT=10

# =================================================================
# UTILITY: YTMUSIC_DL
# =================================================================
# Directory where downloaded music files will be saved
# Default: ~/Music (cross-platform)
# Path examples:
#   Linux/macOS: /home/user/Music
#   Windows:     D:\Music\YTMusic
# YTMUSIC_DL_DOWNLOAD_DIR=/path/to/your/music

# Path to the JSONL file that tracks download history
# Default: ~/.ytmusic_dl/history.jsonl
# YTMUSIC_DL_HISTORY_FILE=/path/to/history.jsonl

# =================================================================
# PERFORMANCE SETTINGS (can be used by multiple utilities)
# =================================================================
MAX_WORKERS=4
CHUNK_SIZE=8192